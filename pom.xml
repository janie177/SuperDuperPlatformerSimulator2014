<project>
    <modelVersion>4.0.0</modelVersion>
    <name>Super Duper Platformer Simulator 2014</name>
    <artifactId>SuperDuperPlatformerSimulator2014</artifactId>
    <groupId>com.minegusta</groupId>
    <version>0.1.0.0</version>

    <build>
        <plugins>
            <plugin>
                <artifactId>maven-assembly-plugin</artifactId>
                <configuration>
                    <archive>
                        <manifest>
                            <mainClass>fully.qualified.MainClass</mainClass>
                        </manifest>
                    </archive>
                    <descriptorRefs>
                        <descriptorRef>jar-with-dependencies</descriptorRef>
                    </descriptorRefs>
                </configuration>
            </plugin>
        </plugins>
        <defaultGoal>mvn clean compile assembly:single</defaultGoal>
    </build>

</project>